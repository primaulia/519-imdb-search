
<div class="container">
  <%= form_tag root_path, method: :get, class: 'my-3' do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find your show collections"
    %>
    <%= submit_tag "Search", class: "btn btn-primary btn-block my-3" %>
  <% end %>

  <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; grid-gap: 16px;">
    <% @results.each do |result| %>
      <%= render result.searchable %>
    <% end %>
  </div>
  </ul>
</div>


